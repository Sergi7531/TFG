<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticketDataLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <View
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor" />

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/ticketInfo"
        android:layout_toRightOf="@id/ticketInfo"
        android:background="?attr/backgroundColor" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ticketInfo"
        android:background="?attr/backgroundColor" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ticketInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardBackgroundColor="@color/primaryLightColor"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ticketInfo2"
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageTicketDetail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/facebook" />

            <TextView
                android:id="@+id/filmNameTicketDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/satoshi"
                android:text="Nombre peli"
                android:textColor="@color/dprimaryColor"
                android:textSize="28sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/taglineTicket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:autoText="false"
                android:elegantTextHeight="true"
                android:fontFamily="@font/satoshi"
                android:text="TextView"
                android:textColor="@color/dprimaryColor"
                android:textSize="12sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mapIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_baseline_location_on_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/linearCinema"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/satoshi"
                    android:text="Nombre cine"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calendarImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_baseline_calendar_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/dayTicketDetail"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/satoshi"
                    android:gravity="start"
                    android:text="TextView"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/hourImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/ic_baseline_hour_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/timeTicketDetail"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/satoshi"
                    android:text="TextView"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:gravity="center"
                        android:text="Sala"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/roomTicketDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:text="00"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:text="Fila"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rowTicketDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:text="00"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:text="Asiento"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/seatTicketDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/satoshi"
                        android:text="00"
                        android:textColor="@color/dprimaryColor"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/qrButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/satoshi"
                android:gravity="center"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:text="@string/qr_show"
                android:textAlignment="center"
                android:textColor="@color/dsecondaryColor"
                android:textSize="45sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-80dp"
            app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
            app:tint="?attr/backgroundColor" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="-80dp"
            android:rotation="180"
            app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
            app:tint="?attr/backgroundColor" />

        <androidx.cardview.widget.CardView
            android:id="@+id/qrCard"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:cardBackgroundColor="?attr/backgroundColor"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/qrCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/screen_background_light" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="525dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ticket_line" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="500dp"
            android:layout_marginRight="-26dp"
            android:rotation="90"
            app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
            app:tint="?attr/backgroundColor" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="500dp"
            android:rotation="270"
            app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
            app:tint="?attr/backgroundColor" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>