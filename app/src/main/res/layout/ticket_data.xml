<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticketDataLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dprimaryTextColor">

    <LinearLayout
        android:id="@+id/ticketInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageTicketDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/facebook" />

        <TextView
            android:id="@+id/filmNameTicketDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/satoshi"
            android:text="Nombre peli"
            android:textColor="@color/dprimaryColor"
            android:textSize="28sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/taglineTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/satoshi"
            android:text="TextView"
            android:textColor="@color/dprimaryColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_location_on_24"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/linearCinema"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/satoshi"
                android:text="Nombre cine"
                android:textColor="@color/dprimaryColor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendarImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_calendar_24"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/dayTicketDetail"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/satoshi"
                android:gravity="start"
                android:text="TextView"
                android:textColor="@color/dprimaryColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/hourImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_baseline_hour_24"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/timeTicketDetail"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/satoshi"
                android:text="TextView"
                android:textColor="@color/dprimaryColor"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:gravity="center"
                    android:text="Sala"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/roomTicketDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:text="00"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:text="Fila"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rowTicketDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:text="00"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:text="Asiento"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/seatTicketDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/satoshi"
                    android:text="00"
                    android:textColor="@color/dprimaryColor"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/qrButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="QR"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="435dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ticket_line" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="410dp"
        android:rotation="270"
        app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
        app:tint="?attr/backgroundColor" />

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:alpha="0"
        app:srcCompat="@android:drawable/screen_background_light" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/ticketInfo"
        android:layout_marginTop="410dp"
        android:layout_marginRight="-26dp"
        android:rotation="90"
        app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
        app:tint="?attr/backgroundColor" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        app:srcCompat="@drawable/ic_baseline_incomplete_circle_24"
        app:tint="?attr/backgroundColor" />

    <View
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor" />

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/ticketInfo"
        android:layout_toRightOf="@id/ticketInfo"
        android:background="?attr/backgroundColor" />



</RelativeLayout>