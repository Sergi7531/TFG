<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userActivityCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorPrimaryVariant"
    app:cardCornerRadius="16sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleUserActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/satoshi"
            android:text="@string/friends_activity"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/titleUserActivity"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/moviez_logo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleUserActivity"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/movieImage"
                android:layout_width="130dp"
                android:layout_height="230dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/moviez_logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textToShow"
            android:layout_width="210dp"
            android:layout_height="160dp"
            android:layout_alignTop="@id/cardImage"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/cardImage"
            android:fontFamily="@font/satoshi"
            android:text="TextView"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/satoshi"
            android:text="day"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardImage"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@id/dayText"
            android:fontFamily="@font/satoshi"
            android:text=" - "
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/hourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardImage"
            android:layout_toLeftOf="@id/textView35"
            android:fontFamily="@font/satoshi"
            android:text="hour"
            android:textColor="?attr/colorOnSecondary" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>