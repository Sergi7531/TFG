<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/genreHolder"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/imageTriangle"
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:alpha="0.6"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_triangle" />

    <TextView
        android:id="@+id/titleGenreHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:elevation="12dp"
        android:text="TextView"
        android:textColor="@color/primaryTextColor"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageTriangle" />

    <ImageView
        android:id="@+id/image_backgroundHolder"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_action" />
</androidx.constraintlayout.widget.ConstraintLayout>