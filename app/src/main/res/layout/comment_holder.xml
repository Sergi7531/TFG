<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/profilePicUserHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/moviez_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameMyUserHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageCard"
        android:fontFamily="@font/satoshi"
        android:text="TextView"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/satoshi"
        android:text="/5.0" />

    <TextView
        android:id="@+id/userRatingHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/textView7"
        android:fontFamily="@font/satoshi"
        android:text="0.0" />

    <TextView
        android:id="@+id/commentUserHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameMyUserHolder"
        android:layout_alignLeft="@id/usernameMyUserHolder"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:alpha="0.7"
        android:fontFamily="@font/satoshi"
        android:text="TextView"
        android:textColor="?attr/colorOnSecondary" />
</RelativeLayout>