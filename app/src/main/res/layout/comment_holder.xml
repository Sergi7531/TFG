<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?attr/colorPrimaryVariant"><![CDATA[
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    ]]>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/profilePicUserHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/moviez_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameMyUserHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imageCard"
        android:fontFamily="@font/satoshi"
        android:text="@string/textview"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/satoshi"
        android:text="@string/_5_0"
        android:textColor="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/userRatingHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/textView7"
        android:fontFamily="@font/satoshi"
        android:text="@string/_0_0"
        android:textColor="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/commentUserHolder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameMyUserHolder"
        android:layout_alignStart="@id/usernameMyUserHolder"
        android:layout_marginTop="5dp"
        android:alpha="0.7"
        android:fontFamily="@font/satoshi"
        android:text="@string/textview"
        android:textColor="?attr/colorOnSecondary" />

    <ImageView
        android:id="@+id/spoilerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_alignTop="@id/commentUserHolder"
        android:layout_alignEnd="@id/textView7"
        tools:srcCompat="@drawable/ic_baseline_warning_amber_24" />

</RelativeLayout>